<div data-controller="list">
  <div class="list-buttons columns">
    <div class="column">
      <%= link_to new_bank_path, class: 'button is-primary' do %>
        Novo
      <% end %>
    </div>
    <div class="column mass-actions" data-target="list.massActionsContainer">
      <button data-action="click->list#destroySelected" data-destroy-url="<%= bank_url(id: ':id:') %>.json" class="button is-danger">
        Excluir
      </button>
    </div>
  </div>

  <table class="table is-striped is-narrow is-hoverable is-fullwidth">
    <thead>
      <tr>
