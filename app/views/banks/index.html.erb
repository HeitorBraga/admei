      </tr>
    </thead>
    <tbody>
      <% @banks.each do |bank| %>
        <tr data-target="list.items">
          <td class="item-check">
            <input type="checkbox" value="<%= bank.id %>" data-action="change->list#itemSelect">
          </td>
          <td>
            <%= bank.code %>
          </td>
          <td class="clickable" data-action="click->list#edit" data-edit-url="<%= edit_bank_url(bank) %>">
