
<%= simple_form_for(@cash_register) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs columns">
    <div class="column is-3">
      &nbsp;
      <div class="is-flex">
        <h2 class="title is-5">Retirar</h2>&nbsp;&nbsp;&nbsp;
        <%= f.input :add_money, label: 'add' %>&nbsp;&nbsp;&nbsp;
        <h2 class="title is-5">Adicionar</h2>
      </div>
    </div>
    <div class="column">
      <%= f.input :amount, as: :string, input_html: { data: { mask: 'money' } } %>
    </div>
  </div>
  <div class="form-inputs columns">
    <div class="column">
      <%= f.association :payment_method %>
    </div>
    <div class="column">
      <%= f.input :month, collection: CashRegister.month_enums %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Salvar' %>
    <%= link_to 'Cancelar', cash_registers_path %>
  </div>
<% end %>
