<div data-controller="list">
  <div class="list-buttons columns">
    <div class="column">
      <%= link_to new_city_path, class: 'button is-primary' do %>
        Novo
      <% end %>
    </div>
    <div class="column mass-actions" data-target="list.massActionsContainer">
      <button data-action="click->list#destroySelected" data-destroy-url="<%= city_url(id: ':id:') %>.json" class="button is-danger">
        Excluir
      </button>
    </div>
  </div>

  <table class="table is-striped is-narrow is-hoverable is-fullwidth">
    <thead>
      <tr>
        <th>&nbsp;</th>
        <th>Name</th>
        <th>State</th>
        <th>Ibge code</th>
      </tr>
    </thead>
    <tbody>
      <% @cities.each do |city| %>
        <tr data-target="list.items">
          <td class="item-check">
            <input type="checkbox" value="<%= city.id %>" data-action="change->list#itemSelect">
          </td>
          <td class="clickable" data-action="click->list#edit" data-edit-url="<%= edit_city_url(city) %>">
            <%= city.name %>
          </td>
          <td class="clickable" data-action="click->list#edit" data-edit-url="<%= edit_state_url(city.state) %>">
            <%= city.state.uf %>
          </td>
          <td>
            <%= city.ibge_code %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<div>

<%= will_paginate @cities %>
