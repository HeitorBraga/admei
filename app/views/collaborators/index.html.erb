<div data-controller="list">
  <div class="list-buttons columns">
    <div class="column">
      <%= link_to new_collaborator_path, class: 'button is-primary' do %>
        Novo
      <% end %>
    </div>
    <div class="column mass-actions" data-list-target="massActionsContainer">
      <button data-action="click->list#destroySelected" data-destroy-url="<%= collaborator_url(id: ':id:') %>.json" class="button is-danger">
        Excluir
      </button>
    </div>
  </div>

  <table class="table is-striped is-narrow is-hoverable is-fullwidth">
    <thead>
      <tr>
        <th>&nbsp;</th>
              <th>Nome</th>
            </tr>
    </thead>
    <tbody>
    <% @collaborators.each do |collaborator| %>
      <tr data-list-target="items" data-edit-url="<%= edit_collaborator_url(collaborator) %>">
        <td class="item-check">
          <input type="checkbox" value="<%= collaborator.id %>" data-action="change->list#itemSelect">
        </td>
        <td class="clickable" data-action="click->list#edit">
          <%= collaborator.name %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<div>

<%= will_paginate @collaborators %>
