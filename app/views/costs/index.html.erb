<div data-controller="list">
  <div class="list-buttons columns">

  </div>

  <table class="table is-striped is-narrow is-hoverable is-fullwidth">
    <thead>
      <tr>
        <th>&nbsp;</th>
              <th>Ingredient</th>
              <th>Unit</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Quantity used</th>
              <th>Cost</th>
            </tr>
    </thead>
    <tbody>
    <% @costs.each do |cost| %>
      <tr data-list-target="items" data-edit-url="<%= edit_cost_url(cost) %>">
        <td class="item-check">
          <input type="checkbox" value="<%= cost.id %>" data-action="change->list#itemSelect">
        </td>
              <td class="clickable" data-action="click->list#edit">
      <%= cost.ingredient %>
        </td>
                <td class="clickable" data-action="click->list#edit">
      <%= cost.unit %>
        </td>
                <td class="clickable" data-action="click->list#edit">
      <%= cost.quantity %>
        </td>
                <td class="clickable" data-action="click->list#edit">
      <%= cost.price %>
        </td>
                <td class="clickable" data-action="click->list#edit">
      <%= cost.quantity_used %>
        </td>
                <td class="clickable" data-action="click->list#edit">
      <%= cost.cost %>
        </td>
              </tr>
    <% end %>
    </tbody>
  </table>
<div>

<%= will_paginate @costs %>
