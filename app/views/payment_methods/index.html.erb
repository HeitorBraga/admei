<div data-controller="list">
  <div class="list-buttons columns">
    <div class="column">
      <%= link_to new_payment_method_path, class: 'button is-primary' do %>
        Novo
      <% end %>
    </div>
    <div class="column mass-actions" data-list-target="massActionsContainer">
      <button data-action="click->list#destroySelected" data-destroy-url="<%= payment_method_url(id: ':id:') %>.json" class="button is-danger">
        Excluir
      </button>
    </div>
  </div>

  <table class="table is-striped is-narrow is-hoverable is-fullwidth">
    <thead>
      <tr>
        <th>&nbsp;</th>
              <th>Name</th>
            </tr>
    </thead>
    <tbody>
    <% @payment_methods.each do |payment_method| %>
      <tr data-list-target="items" data-edit-url="<%= edit_payment_method_url(payment_method) %>">
        <td class="item-check">
          <input type="checkbox" value="<%= payment_method.id %>" data-action="change->list#itemSelect">
        </td>
              <td class="clickable" data-action="click->list#edit">
      <%= payment_method.name %>
        </td>
              </tr>
    <% end %>
    </tbody>
  </table>
<div>

<%= will_paginate @payment_methods %>
